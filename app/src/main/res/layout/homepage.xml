<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_blue"
    >

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="211dp"
        android:layout_height="162dp"
        app:srcCompat="@drawable/logori1"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="-37dp" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="341dp"
        android:layout_height="242dp"
        app:srcCompat="@drawable/surfing"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="33dp" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="341dp"
        android:layout_height="305dp"
        app:srcCompat="@drawable/snok"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="204dp" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="342dp"
        android:layout_height="291dp"
        app:srcCompat="@drawable/icebath"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="411dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:text="Surfing"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="233dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="68dp"
        android:layout_height="23dp"
        android:text="Snorkeling"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="438dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ice bath"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="644dp" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        app:itemIconTint="@color/dark_blue"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>